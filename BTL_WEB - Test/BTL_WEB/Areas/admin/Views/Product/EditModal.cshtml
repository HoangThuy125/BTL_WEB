@using BTL_WEB.Models.Entities
@using BTL_WEB.Models.Functions
@{
    List<tbl_nhasanxuat> list_nxs = new Func_nhasanxuat().DS_NhaSanXuat.ToList();

}
<div id="edit-product-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <form>
                    <label id="idsanpham">  </label>
                    
                    <div class="form-group">
                        <label>Tên sản phẩm</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>
                    <div class="form-group">
                        <label>Giá sản phẩm</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>
                    <div class="form-group">
                        <label>Số lượng</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>
                    <div class="form-group">
                        <label>Trọng lượng</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>

                    <div class="form-group">
                        <label>Rom</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>

                    <div class="form-group">
                        <label>Ram</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>

                    <div class="form-group">
                        <label>Thẻ nhớ</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>

                    <div class="form-group">
                        <label>Camera trước</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>

                    <div class="form-group">
                        <label>Camera sau</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>


                    <div class="form-group">
                        <label>Pin</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>


                    <div class="form-group">
                        <label>Thời gian bảo hành</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>
                    <div class="form-group">
                        <label>Bluetooth</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>
                    <div class="form-group">
                        <label>Nhà sản xuất</label>
                        <select class="form-control">
                            @foreach (tbl_nhasanxuat nsx in list_nxs)
                          {
                                <option>@nsx.ten</option>
                            }


                        </select>
                    </div>
                    <div class="form-group">
                        <label>CPU</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>
                    <div class="form-group">
                        <label>Màn hình</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>
                    <div class="form-group">
                        <label>Tình trạng</label>
                        <input class="form-control" placeholder="Enter text">
                    </div>

                </form>
               

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>